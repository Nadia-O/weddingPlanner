@model User;

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-3">Welcome!</h1>
    <h1 class="display-4">Register Here</h1>
    <a asp-action="Login" asp-controller="Home">Already have an account?</a><br><br>
    <div class="text-center;">
        
        <form asp-action="Register" asp-controller="Home" method="Post">

                <span asp-validation-for="FirstName"></span>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control">
    
                <span asp-validation-for="LastName"></span>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control">

                <span asp-validation-for="Email"></span>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control">

                <span asp-validation-for="Password"></span>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">

                <span asp-validation-for="ConfirmPassword"></span>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control"><br>
    
                <input type="submit" class="btn btn-success" value="Register">
        </form>

</div>

