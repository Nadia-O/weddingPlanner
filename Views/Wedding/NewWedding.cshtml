@model Wedding;

<div class="row justify-content-around">

        <form asp-action="CreateWedding" asp-controller="Wedding" method="post">
                <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId">

                <h1 class="display-4">Plan Your Wedding</h1><br>

                <span class="red" asp-validation-for="WedderOne"></span>
                <label asp-for="WedderOne"></label>
                <input asp-for="WedderOne" class="form-control">

                <span class="red" asp-validation-for="WedderTwo"></span>
                <label asp-for="WedderTwo"></label>
                <input asp-for="WedderTwo" class="form-control">

                <span class="red" asp-validation-for="Date"></span>
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control"><br>

                <span class="red" asp-validation-for="Address"></span>
                <label asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control"></textarea><br>

                <input type="submit" class="btn btn-outline-success" value="Submit"><br><br>
                <a asp-action="Index" asp-controller="Wedding">Back to Dashboard</a><br><br>
                <a asp-action="Logout" asp-controller="Wedding">Logout</a>
        </form><br>

</div>